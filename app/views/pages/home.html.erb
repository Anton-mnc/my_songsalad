<%# warper %>
<div class="container home" data-controller="home" data-home-target="home" home-path-value= "analytical_technician..._path">

<%# Logo %>
<div class="container text-center logo animate__animated animate__bounceInDown" >
  <%= image_tag("logo-smile.png", width: 270, height: 270, :class => "img-fluid mb-1") %>
</div>

<%# h6 & BUTTONS%>
<div class="mode-de-jeu container text-center animate__animated animate__bounceInRight " >
  <h4 class="mt-3 mb-4 choix">Choisissez votre mode de jeu</h4>
  <%= simple_form_for([@solo, @session], html: { class: 'd-block', data: {action: "submit->home#out"} }) do |f| %>
    <%= f.button :submit, value: "CHANSON DU JOUR", class: 'btn d-block btn-primary btn-lg mb-4', style: "width: 100%"  %>
  <% end %>
  <%= simple_form_for([@playlist, @session], html: { class: 'd-block', data: {action: "submit->home#out"} }) do |f| %>
    <%= f.button :submit, value: "PLAYLIST DU JOUR (x3)", class: 'btn d-block btn-primary btn-lg mb-4', style: "width: 100%"  %>
  <% end %>
</div>


  <%# small button %>
  <div class="small-btn-home animate__animated animate__bounceInLeft">

    <% if user_signed_in? %>
      <%= link_to friendships_path(current_user), class: "btn btn-warning" do %>
        <i class="fas fa-users"></i>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "btn btn-warning" do %>
        <i class="fas fa-users"></i>
      <% end %>
    <%end %>

     <% if user_signed_in? %>
      <%= link_to users_stats_path, class: "btn btn-warning" do %>
        <i class="fas fa-chart-bar fa-1x"></i>
      <% end %>
    <% elsif guest_present? %>
      <%= link_to stats_guest_path(current_guest), class: "btn btn-warning" do %>
        <i class="fas fa-chart-bar fa-1x"></i>
      <% end %>
    <% end %>

    <%= link_to rules_path, class: "btn btn-warning text-center" do %>
      <i class="fas fa-book-open fa-1x"></i>
    <% end %>

    <%= link_to faq_path, class: "btn btn-warning" do %>
      <i class="fas fa-question-circle fa-1x"></i>
    <% end %>
  </div>
</div>
