<div class="container container-victory d-flex text-center" style="flex-direction: column" >
  <h1>Bravo !</h1>

  <div><%= image_tag("victoire.png", width: 100, height: 100, :class => "img-fluid mb-3") %></div>

  <% @game_session.game_session_songs.each do |song|%>
    <div class="bubble" style="width: 50vw" >
        <h3><%= song.game_song.song.title %></h3> <br>
        <h4><%= song.game_song.song.author %></h4><br>
        (<%= Guess.where(game_session_song: song).count %> coups )
    </div>
  <% end %>

  <div>
    <%= link_to "Rejouer", root_path, class: "btn d-block btn-primary btn-lg mb-5" %>
  </div>

<div class="input-group" data-controller="clipboard" data-clipboard-feedback-text-value="Copied!">
    <button id="copy-button" class="btn btn-outline-primary" data-action="click->clipboard#copy">Copy to Clipboard</button>
  </div>
</div>

</div>
